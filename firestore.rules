rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function projectDoc(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId));
    }

    function canReadProjectData(data) {
      return signedIn() && request.auth.uid in data.memberUids;
    }

    function canEditProjectData(data) {
      return signedIn() && data.members[request.auth.uid] in ["owner", "edit"];
    }

    function canReadProject(projectId) {
      return canReadProjectData(projectDoc(projectId).data);
    }

    function canEditProject(projectId) {
      return canEditProjectData(projectDoc(projectId).data);
    }

    function flowDoc(flowId) {
      return get(/databases/$(database)/documents/flows/$(flowId));
    }

    function isFlowOwner(flowId) {
      return signedIn() && flowDoc(flowId).data.ownerId == request.auth.uid;
    }

    function canReadFlowData(data) {
      return (
          signedIn() &&
          (
            data.ownerId == request.auth.uid ||
            request.auth.uid in data.sharedWith
          )
        ) ||
        data.publicAccess in ["read", "comment", "edit"];
    }

    function canCommentFlowData(data) {
      return (
          signedIn() &&
          (
            data.ownerId == request.auth.uid ||
            data.sharing[request.auth.uid] in ["comment", "edit"]
          )
        ) ||
        data.publicAccess in ["comment", "edit"];
    }

    function canEditFlowData(data) {
      return (
          signedIn() &&
          (
            data.ownerId == request.auth.uid ||
            data.sharing[request.auth.uid] == "edit"
          )
        ) ||
        data.publicAccess == "edit";
    }

    function canReadFlow(flowId) {
      return canReadFlowData(flowDoc(flowId).data);
    }

    function canCommentFlow(flowId) {
      return canCommentFlowData(flowDoc(flowId).data);
    }

    function canEditFlow(flowId) {
      return canEditFlowData(flowDoc(flowId).data);
    }

    match /users/{uid} {
      allow create: if signedIn() && request.auth.uid == uid;
      // Needed for share-by-email lookup.
      allow read: if signedIn();
      allow update, delete: if signedIn() && request.auth.uid == uid;

      match /settings/{settingsId} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }
    }

    match /projects/{projectId} {
      allow create: if signedIn() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.members[request.auth.uid] == "owner" &&
        request.auth.uid in request.resource.data.memberUids;

      allow read: if canReadProjectData(resource.data);

      allow update: if canEditProjectData(resource.data) &&
        request.resource.data.ownerId == resource.data.ownerId;

      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;

      match /subprojects/{subprojectId} {
        allow read: if canReadProject(projectId);
        allow create, update, delete: if canEditProject(projectId);
      }
    }

    match /flows/{flowId} {
      allow create: if signedIn() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.sharing[request.auth.uid] == "edit" &&
        request.auth.uid in request.resource.data.sharedWith;

      allow read: if canReadFlowData(resource.data);

      allow update: if canEditFlowData(resource.data) &&
        request.resource.data.ownerId == resource.data.ownerId;

      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;

      match /comments/{commentId} {
        allow read: if canReadFlow(flowId);

        allow create: if canCommentFlow(flowId) &&
          request.resource.data.text is string &&
          request.resource.data.text.size() > 0 &&
          request.resource.data.text.size() <= 5000 &&
          request.resource.data.authorName is string &&
          request.resource.data.authorName.size() > 0 &&
          request.resource.data.authorName.size() <= 80 &&
          (
            (signedIn() && request.resource.data.authorId == request.auth.uid) ||
            (!signedIn() && request.resource.data.authorId == null)
          );

        allow delete: if signedIn() &&
          (isFlowOwner(flowId) || resource.data.authorId == request.auth.uid);

        allow update: if false;
      }

      match /versions/{versionId} {
        allow read: if canReadFlow(flowId);
        allow create: if canEditFlow(flowId);
        allow delete: if isFlowOwner(flowId);
        allow update: if false;
      }
    }

    match /templates/{templateId} {
      allow create: if signedIn() &&
        request.resource.data.ownerId == request.auth.uid;

      allow read: if signedIn() &&
        resource.data.ownerId == request.auth.uid;

      allow update: if signedIn() &&
        resource.data.ownerId == request.auth.uid &&
        request.resource.data.ownerId == resource.data.ownerId;

      allow delete: if signedIn() &&
        resource.data.ownerId == request.auth.uid;
    }
  }
}
