rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function projectDoc(projectId) {
      return get(/databases/$(database)/documents/projects/$(projectId));
    }

    function projectRole(projectId) {
      return projectDoc(projectId).data.members[request.auth.uid];
    }

    function canReadProject(projectId) {
      return signedIn() && projectRole(projectId) in ["owner", "edit", "comment", "read"];
    }

    function canEditProject(projectId) {
      return signedIn() && projectRole(projectId) in ["owner", "edit"];
    }

    function flowDoc(flowId) {
      return get(/databases/$(database)/documents/flows/$(flowId));
    }

    function flowRole(flowId) {
      return flowDoc(flowId).data.sharing[request.auth.uid];
    }

    function isFlowOwner(flowId) {
      return signedIn() && flowDoc(flowId).data.ownerId == request.auth.uid;
    }

    function canReadFlow(flowId) {
      return isFlowOwner(flowId) ||
        (signedIn() && flowRole(flowId) in ["read", "comment", "edit"]) ||
        flowDoc(flowId).data.publicAccess in ["read", "comment", "edit"];
    }

    function canCommentFlow(flowId) {
      return isFlowOwner(flowId) ||
        (signedIn() && flowRole(flowId) in ["comment", "edit"]) ||
        (signedIn() && flowDoc(flowId).data.publicAccess in ["comment", "edit"]);
    }

    function canEditFlow(flowId) {
      return isFlowOwner(flowId) ||
        (signedIn() && flowRole(flowId) == "edit") ||
        (signedIn() && flowDoc(flowId).data.publicAccess == "edit");
    }

    match /users/{uid} {
      allow create: if signedIn() && request.auth.uid == uid;
      // Needed for share-by-email lookup.
      allow read: if signedIn();
      allow update, delete: if signedIn() && request.auth.uid == uid;

      match /settings/{settingsId} {
        allow read, write: if signedIn() && request.auth.uid == uid;
      }
    }

    match /projects/{projectId} {
      allow create: if signedIn() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.members[request.auth.uid] == "owner" &&
        request.resource.data.memberUids.hasAny([request.auth.uid]);

      allow read: if canReadProject(projectId);

      allow update: if canEditProject(projectId) &&
        request.resource.data.ownerId == resource.data.ownerId;

      allow delete: if signedIn() && resource.data.ownerId == request.auth.uid;

      match /subprojects/{subprojectId} {
        allow read: if canReadProject(projectId);
        allow create, update, delete: if canEditProject(projectId);
      }
    }

    match /flows/{flowId} {
      allow create: if signedIn() &&
        request.resource.data.ownerId == request.auth.uid &&
        request.resource.data.sharing[request.auth.uid] == "edit" &&
        request.resource.data.sharedWith.hasAny([request.auth.uid]);

      allow read: if canReadFlow(flowId);

      allow update: if canEditFlow(flowId) &&
        request.resource.data.ownerId == resource.data.ownerId;

      allow delete: if isFlowOwner(flowId);

      match /comments/{commentId} {
        allow read: if canReadFlow(flowId);

        allow create: if signedIn() &&
          canCommentFlow(flowId) &&
          request.resource.data.authorId == request.auth.uid;

        allow delete: if signedIn() &&
          (isFlowOwner(flowId) || resource.data.authorId == request.auth.uid);

        allow update: if false;
      }
    }
  }
}
